{
  "ServerStarters:ServerInfoBaseAddress": "https://dev-8888.balancemod.tf/",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=aspnet-ServerStarter.Server-EA1545A0-EB79-480A-9D38-989950E652AB;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithElasticApmCorrelationInfo"
    ],
    "Properties": {
      "Application": "ServerStarter.Server"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.clef",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit ": true,
          "fileSizeLimitBytes": "5242880"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit ": true,
          "fileSizeLimitBytes": "5242880"
        }
      },
      {
        "Name": "Console"
      }
    ]
  },
  "IdentityServer": {
    "Clients": {
      "ServerStarter.Client": {
        "Profile": "IdentityServerSPA"
      }
    }
  },
  //"ElasticApm": {
  //  "SecretToken": "",
